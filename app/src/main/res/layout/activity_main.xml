<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/topbar_bg"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="357dp"
        android:layout_height="118dp"
        android:gravity="center"
        android:text="Drug Dosage Calculator"
        android:textColor="#FFFFFF"
        android:textSize="45dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/homepage_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView">

        <Button
            android:id="@+id/number_of_tablets"
            android:layout_width="168dp"
            android:layout_height="84dp"
            android:background="@drawable/click_button"
            android:elevation="30dp"
            android:padding="4dp"
            android:text="Number of Tablets"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.248" />

        <Button
            android:id="@+id/volume_of_liquid"
            android:layout_width="168dp"
            android:layout_height="84dp"
            android:background="@drawable/click_button"
            android:elevation="30dp"
            android:padding="4dp"
            android:text="Volume of \nLiquid"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toEndOf="@+id/number_of_tablets"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.248" />

        <Button
            android:id="@+id/iv_volume_rate"
            android:layout_width="168dp"
            android:layout_height="84dp"
            android:background="@drawable/click_button"
            android:elevation="30dp"
            android:padding="4dp"
            android:text="I.V Volume \n Rate"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.065"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/number_of_tablets"
            app:layout_constraintVertical_bias="0.161" />

        <Button
            android:id="@+id/iv_drop_rate"
            android:layout_width="168dp"
            android:layout_height="84dp"
            android:background="@drawable/click_button"
            android:elevation="30dp"
            android:padding="4dp"
            android:text="I.V Drop \nRate"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.44"
            app:layout_constraintStart_toEndOf="@+id/iv_volume_rate"
            app:layout_constraintTop_toBottomOf="@+id/number_of_tablets"
            app:layout_constraintVertical_bias="0.156" />

        <Button
            android:id="@+id/unit_conversion"
            android:layout_width="249dp"
            android:layout_height="94dp"
            android:background="@drawable/click_button"
            android:elevation="30dp"
            android:padding="4dp"
            android:text="Unit Conversion"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_drop_rate"
            app:layout_constraintVertical_bias="0.309" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>